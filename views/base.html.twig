    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <title>FontConverter</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <link rel="stylesheet" href="assets/css/uikit.almost-flat.min.css" />
        <link rel="stylesheet" href="assets/css/uikit.addons.min.css" />
    </head>
    <body>
        <div class="uk-width-medium-1-2 uk-article uk-container-center">
            <h1 class="uk-article-title">FontConverter GUI</h1>
            {% if error %}
            <p class="uk-alert uk-alert-danger">{{ error }}</p>
            {% endif %}
            <form class="uk-form uk-form-stacked" action="#" method="post" id="ttf-form" enctype="multipart/form-data"  >

                <div class="uk-form-row">
                    <label class="uk-form-label" for="file">TTF font</label>
                    <input id="file" type="file" name="file" value="" />
                </div>
                <div class="uk-form-row">
                    <button class="uk-button uk-button-primary"><i class="uk-icon-upload"></i> Convert</button>
                </div>
            </form>
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="assets/js/uikit.min.js"></script>
    </body>
</html>